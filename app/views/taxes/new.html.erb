<h1>Tax Calculation</h1>

<%= form_for @tax do |f| %>
  <div class="field">
    <%= f.label :monthly_income, 'Monthly Income' %>
    <%= f.number_field :monthly_income %>
  </div>
  <div class="field">
    <%= f.label :assessment_type %>
    <%= f.select :assessment_type, ['Single', 'Couple'] %>
  </div>
  <div class="actions">
    <%= f.submit 'Calculate' %>
  </div>
<% end %>

<%= link_to 'Back', root_path %>
